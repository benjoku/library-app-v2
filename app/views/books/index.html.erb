<h1>Index page</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th colspan="3">Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= link_to 'Show', book_path(book), method: :get %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Delete', book_path(book), method: :delete, data: { confirm: 'Are you sure you want to delete this book?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Create New Book', new_book_path %>

